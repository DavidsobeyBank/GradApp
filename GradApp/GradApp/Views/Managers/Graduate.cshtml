@model IEnumerable<GradApp.Models.Manager>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
            <h2>Managers List</h2>
            @foreach (var item in Model)
            {
                <div class="row card">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 card_header">
                                <h4><strong>@Html.DisplayFor(modelItem => item.Name)<text>&nbsp;</text>@Html.DisplayFor(modelItem => item.Surname)</strong></h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Email
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8 text_wrap">
                                @Html.DisplayFor(modelItem => item.Email)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Area
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8">
                                @Html.DisplayFor(modelItem => item.Location)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Location
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8">
                                @Html.DisplayFor(modelItem => item.Area.AreaName)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
