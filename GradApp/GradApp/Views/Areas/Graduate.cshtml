@model IEnumerable<GradApp.Models.Area>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <br />

    <div class="row">
        <div class="col-sm-8">
            <h3>Areas</h3>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-8 col-sm-8">
                <div class="row">
                    <div class="col-xs-6 col-sm-5 align-items-center">
                        <h3>@Html.DisplayFor(modelItem => item.AreaName)</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                        <strong>
                            Manager
                        </strong>
                    </div>
                    <div class="col-xs-6 col-sm-5 align-items-center text-left">
                        @foreach (var manager in item.Managers)
                        {
                            @Html.DisplayFor(modelItem => manager.Name)<text>&nbsp;</text>@Html.DisplayFor(modelItem => manager.Surname)<br/>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                        <strong>
                            Description
                        </strong>
                    </div>
                    <div class="col-xs-6 col-sm-5 align-items-center text-left">
                        @Html.DisplayFor(modelItem => item.Comment)
                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>
