@model IEnumerable<GradApp.Models.Area>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaBuilding)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaFloor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaBuilding)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaFloor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AreaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AreaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AreaID })
        </td>
    </tr>
}

</table>
