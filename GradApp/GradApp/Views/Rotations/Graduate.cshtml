@model IEnumerable<GradApp.Models.Project>

@{
    ViewBag.Title = "Graduate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <br />

    <div class="row">
        <div class="col-sm-8">
            <h3>Available Rotations</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            @{bool empty = true;}

            @foreach (var item in Model)
            {
                empty = false;

                <div class="row">
                    <div class="col-xs-8 col-sm-8">
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Project Name
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.ProjectName)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Area
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.Area.AreaName)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Manager
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.Manager.Name)<text>&nbsp;</text>@Html.DisplayFor(modelItem => item.Manager.Surname)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Brief
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.Brief)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Start Date
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    Start Date
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </div>
                        </div>
                    </div>                                     
                </div>
                <div class="col-xs-1 col-sm-2 align-items-center text-right">
                    <a class="btn btn-info" role="button" href="@Url.Action("GraduateCreate", "ProjectWishLists", new { projectID = item.ProjectID } )">Request to Join</a>
                </div>
                <br />
            }

            @if (empty)
            {
                <div class="row">
                    <div class="col-xs-6 col-sm-5 align-items-center text-right">
                        No available rotations to display
                    </div>
                </div>
            }
        </div>
    </div>
</div>