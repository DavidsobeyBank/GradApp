@model GradApp.Models.Rotation

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <br />

    <div class="row">
        <div class="col-sm-8">
            <h3>Current Rotation</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <h2>@Html.DisplayFor(model => model.Project.ProjectName)</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-xs-8 col-sm-8">
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.Area.AreaName)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.Area.AreaName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.Manager.Name)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.Manager.Name)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.Brief)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.Brief)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.Skills)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.Skills)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.StartDate)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.StartDate)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                @Html.DisplayNameFor(model => model.Project.EndDate)
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                            @Html.DisplayFor(model => model.Project.Manager.Name)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-xs-8 col-sm-8">
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <h3>Goals</h3>
                        </div>
                        <div class="col-xs-6 col-sm-7 align-items-center text-left">
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var item in Model.Goals.ToList())
            {
                <div class="row">
                    <div class="col-xs-8 col-sm-8">
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    @Html.DisplayNameFor(modelItem => item.GoalName)
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.GoalName)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                                <strong>
                                    @Html.DisplayNameFor(modelItem => item.GoalComment)
                                </strong>
                            </div>
                            <div class="col-xs-6 col-sm-7 align-items-center text-left">
                                @Html.DisplayFor(modelItem => item.GoalComment)
                            </div>
                        </div>
                    </div>
                </div>

                <br />
            }
        </div>
    </div>
</div>
        
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
