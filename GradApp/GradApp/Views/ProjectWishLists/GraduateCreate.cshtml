@model GradApp.Models.ProjectWishList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row ">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
            <h2>Project Request</h2>
            <div class="row card">
                <div class="container form-horizontal">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 card_header">
                            <h4><strong>@Html.DisplayFor(modelItem => modelItem.Project.ProjectName)</strong></h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Area
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.DisplayFor(modelItem => modelItem.Project.Area.AreaName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Manager
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.DisplayFor(modelItem => modelItem.Project.Manager.Name)<text>&nbsp;</text>@Html.DisplayFor(modelItem => modelItem.Project.Manager.Surname)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Brief
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.DisplayFor(modelItem => modelItem.Project.Brief)
                        </div>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group hidden">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Project
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.DropDownList("ProjectID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProjectID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group hidden">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Graduate
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.DropDownList("GraduateID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GraduateID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4">
                            <strong>
                                Motivation
                            </strong>
                        </div>
                        <div class="col-xs-8 col-sm-8">
                            @Html.EditorFor(model => model.Moivation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Moivation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
            <input type="submit" value="Request" class="btn btn-success" />
        </div>
    </div>
    <div class="row ">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
            <a href="javascript:history.back()" class="btn btn-info">Back to Projects</a>
        </div>
    </div>
</div>

