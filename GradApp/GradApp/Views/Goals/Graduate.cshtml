@model GradApp.Models.Goal

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <br />

    <div class="row">
        <div class="col-sm-8">
            <h3>Goal</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <h3>@Html.DisplayFor(model => model.GoalName)</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-xs-8 col-sm-8">
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                Comment
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-5 align-items-center text-left">
                            @Html.DisplayFor(model => model.GoalComment)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-5 align-items-center text-right ">
                            <strong>
                                Feedback
                            </strong>
                        </div>
                        <div class="col-xs-6 col-sm-5 align-items-center text-left">
                            @Html.DisplayFor(model => model.GoalFeedback)
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>
        
<p>
    <a href="@Url.Action("Graduate","Projects",new { id = Model.Rotation.ProjectID },null)" class="btn btn-info" role="button">Back to List</a>
</p>
