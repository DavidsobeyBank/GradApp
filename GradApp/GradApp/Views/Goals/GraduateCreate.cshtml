@model GradApp.Models.Goal

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row ">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
                <h2>Add Goal</h2>
                <div class="row card">
                    <div class="container form-horizontal">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 card_header">
                                <h4><strong>Create Goal</strong></h4>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group">
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Name
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8">
                                @Html.EditorFor(model => model.GoalName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GoalName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group hidden">
                            
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Rotation ID
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8">
                                @Html.DropDownList("RotationID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RotationID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-4 col-sm-4">
                                <strong>
                                    Comment
                                </strong>
                            </div>
                            <div class="col-xs-8 col-sm-8">
                                @Html.EditorFor(model => model.GoalComment, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GoalComment, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </div>
        <div class="row ">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-4 mx-auto">
                <a href="javascript:history.back()" class="btn btn-info">Back to Rotation</a>
            </div>
        </div>
    </div>
}

